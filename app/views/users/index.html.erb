<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Users</h1>

  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= link_to "Edit", edit_user_path(user) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
